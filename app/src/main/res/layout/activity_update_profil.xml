<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Putih"
    tools:context=".UpdateProfilActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/Putih">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff"
                android:src="@drawable/arrow_back"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Edit Profil"
                android:textColor="#383838"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/edit_profil"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/foto_profil"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_profil"
                android:text="Nama"
                android:layout_marginTop="50dp"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/localETNama"
                android:layout_below="@+id/nama"
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Nama pengguna"
                android:textSize="17dp"
                android:background="@drawable/edittext_rounded"/>
            <TextView
                android:id="@+id/username"
                android:layout_below="@id/localETNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="17dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/localETUsername"
                android:layout_below="@id/username"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Username"
                android:textSize="17dp"
                android:background="@drawable/edittext_rounded"/>
            <TextView
                android:id="@+id/alamat"
                android:layout_below="@id/localETUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="17dp"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/localETAlamat"
                android:layout_below="@id/alamat"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Alamat"
                android:textSize="17dp"
                android:background="@drawable/edittext_rounded"/>
            <Button
                android:id="@+id/buttonSimpanPerubahanProfil"
                android:layout_below="@id/localETAlamat"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_simpan_perubahan"
                android:text="Simpan Perubahan"
                android:textAllCaps="false"
                android:textColor="@color/Putih"
                android:layout_marginTop="50dp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

