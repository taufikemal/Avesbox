<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Putih"
    tools:context=".ProfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffff"
                android:src="@drawable/arrow_back"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Profil"
                android:textColor="#383838"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="20dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/profil"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/foto_profil"
                android:layout_marginTop="100dp"
                android:layout_centerHorizontal="true" />
            <Button
                android:id="@+id/buttonUpdateProfil"
                android:layout_below="@id/profil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_profil"
                android:text="Edit Profil"
                android:textAllCaps="false"
                android:textColor="@color/Putih"
                android:layout_marginTop="50dp" />
            <Button
                android:id="@+id/buttonUpdatePassword"
                android:layout_below="@id/buttonUpdateProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_changepassword"
                android:text="Edit Password"
                android:textAllCaps="false"
                android:textColor="@color/Putih"
                android:layout_marginTop="15dp" />
            <Button
                android:id="@+id/buttonLogout"
                android:layout_below="@id/buttonUpdatePassword"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_logout"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="@color/Putih"
                android:layout_marginTop="50dp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>




